root = true
/// depois de muitos anos ainda consigo editar código da VTEX - que legal - bem próximo de completar 10 anos que saí da empresa
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 80

[*.toml]
indent_size = 4

[*.md]
max_line_length = unset

[*.{lock,out}] # make editor neutral to .out and .lock files
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
max_line_length = unset
